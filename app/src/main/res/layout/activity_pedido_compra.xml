<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.sidnei.appgestao.pedidocompra.PedidoCompraActivity"
    android:orientation="vertical"
    android:background="@drawable/fundo_padrao">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Dados do Fornecedor"
        android:id="@+id/txtTitulo"
        android:textSize="24sp"
        android:textStyle="normal|bold"
        android:textColor="@android:color/holo_orange_light" />

    <TextView
        android:layout_marginTop="15dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Fornecedor:"
        android:id="@+id/txtFornecedor"
        android:layout_below = "@+id/txtTitulo"/>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/edtFornecedor"
        android:layout_below = "@+id/txtFornecedor"/>

    <LinearLayout
        android:layout_marginTop="15dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_below = "@+id/edtFornecedor">

        <TextView
            android:id="@+id/txtData"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Data Pedido:"
            android:layout_weight="0.67"/>

        <TextView
            android:id="@+id/txtPagamento"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Pagamento:"
            android:layout_weight="2.83"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <EditText
            android:layout_width="114dp"
            android:layout_height="wrap_content"
            android:inputType="date"
            android:ems="10"
            android:id="@+id/edtData" />

        <EditText
            android:id="@+id/edtPagamento"
            android:layout_width="279dp"
            android:layout_height="wrap_content"
            android:layout_below = "@+id/edtPagamento"
            android:layout_weight="2"/>

    </LinearLayout>

    <Button
        android:id="@+id/btnProdutos"
        android:layout_marginTop="15dp"
        android:layout_width="135dp"
        android:layout_height="36dp"
        android:text="Produtos"
        android:onClick="IncluirClick"
        android:background="@drawable/btn_login"
        android:layout_gravity="center_horizontal" />

</LinearLayout>
