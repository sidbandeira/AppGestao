<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/fundo_padrao"
    tools:context="com.example.sidnei.appgestao.FluxoCaixa.FechamentoPesquisaActivity">

    <TextView
        android:id="@+id/txtPesquisa"
        android:layout_width="wrap_content"
        android:layout_height="41dp"
        android:text="Data "
        android:textSize="25sp"
        android:textColor="#ffa602"
        android:layout_alignBaseline="@+id/edtData"
        android:layout_alignBottom="@+id/edtData"
        android:layout_alignParentStart="true"
        android:layout_marginStart="8dp" />

    <EditText
        android:id="@+id/edtData"
        android:layout_width="165dp"
        android:layout_height="41dp"
        android:layout_marginTop="20dp"
        android:ems="10"
        android:inputType="date"
        android:textColor="#ffa602"
        android:textSize="25sp"
        android:textAlignment="center"
        android:background="@drawable/borda_preta"
        android:layout_weight="0.07"
        android:layout_alignParentTop="true"
        android:text="01/01/2017"
        android:layout_toEndOf="@+id/txtPesquisa" />

    <Button
        android:id="@+id/ibtPesquisar"
        android:layout_width="110dp"
        android:layout_height="41dp"
        android:layout_marginTop="20dp"
        android:textSize="18dp"
        android:text="Pesquisar"
        android:layout_gravity="center_horizontal"
        android:background="@drawable/btn_login"
        android:textColor="#ffffff"
        android:layout_marginStart="5dp"
        android:layout_alignParentTop="true"
        android:layout_toEndOf="@+id/edtData"
        android:onClick="ibtPesquisar"/>

</RelativeLayout>
